{
  "name": "user-api",
  "version": "0.1.0",
  "description": "gRPC User API",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "nodemon --watch src --watch package.json --watch package-lock.json --exec \"node --loader ts-node/esm\" src/index.ts",
    "prebuild": "npm run generate",
    "build": "tsc --project tsconfig.build.json && mkdir -p dist/generated && cp -r src/generated/* dist/generated/",
    "check:types": "tsc --noEmit",
    "inspect": "grpcui -plaintext localhost:50053",
    "test": "vitest run",
    "test:ui": "vitest --ui",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "verify": "npm run lint && npm run format:check && npm run build && npm run test && if [ \"$CI\" != \"true\" ]; then npm run test:e2e; fi",
    "test:e2e": "./scripts/test-e2e.sh",
    "generate": "rm -rf src/generated && mkdir -p src/generated && npm run generate:code && npm run generate:descriptor",
    "generate:code": "protoc --plugin=protoc-gen-ts_proto=$(npx which protoc-gen-ts_proto) --ts_proto_out=./src/generated --ts_proto_opt=esModuleInterop=true,importSuffix=.js,outputServices=grpc-js --proto_path=../../protos ../../protos/user.proto",
    "generate:descriptor": "protoc --descriptor_set_out=./src/generated/user.pb --include_imports --include_source_info --proto_path=../../protos ../../protos/user.proto"
  },
  "dependencies": {
    "@bufbuild/protobuf": "^2.5.2",
    "@grpc/grpc-js": "^1.13.4",
    "grpc-server-reflection": "^0.1.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.29.0",
    "@total-typescript/tsconfig": "^1.0.4",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^8.20.0",
    "@typescript-eslint/parser": "^8.20.0",
    "@vitest/coverage-v8": "3.2.4",
    "@vitest/ui": "3.2.4",
    "eslint": "^9.5.0",
    "globals": "^16.2.0",
    "nodemon": "^3.0.0",
    "prettier": "^3.0.0",
    "ts-node": "^10.9.0",
    "ts-proto": "^2.7.5",
    "typescript": "^5.0.0",
    "vitest": "3.2.4"
  }
}
