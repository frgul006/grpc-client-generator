{
  "name": "product-api",
  "version": "0.1.0",
  "description": "gRPC Product API",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "nodemon --watch src --exec ts-node src/index.ts",
    "prebuild": "npm run generate",
    "build": "tsc --project tsconfig.build.json && mkdir -p dist/generated && cp -r src/generated/* dist/generated/",
    "check:types": "tsc --noEmit",
    "inspect": "grpcui -plaintext localhost:50052",
    "test": "vitest run",
    "lint": "eslint src --ext .ts",
    "verify": "npm run lint && npm run check:types && npm run build && npm run test",
    "test:e2e": "./scripts/test-e2e.sh",
    "generate": "rm -rf src/generated && mkdir -p src/generated && npm run generate:code && npm run generate:descriptor",
    "generate:code": "grpc_tools_node_protoc --js_out=import_style=commonjs,binary:./src/generated --grpc_out=grpc_js:./src/generated --ts_out=grpc_js:./src/generated -I ../../protos ../../protos/product.proto",
    "generate:descriptor": "grpc_tools_node_protoc --descriptor_set_out=./src/generated/product.pb --include_imports --include_source_info -I ../../protos ../../protos/product.proto"
  },
  "dependencies": {
    "@grpc/grpc-js": "^1.13.4",
    "google-protobuf": "^3.21.4",
    "grpc-server-reflection": "^0.1.5"
  },
  "devDependencies": {
    "@types/google-protobuf": "^3.15.12",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitest/coverage-v8": "^1.0.0",
    "@vitest/ui": "^1.0.0",
    "eslint": "^8.0.0",
    "grpc_tools_node_protoc_ts": "^5.3.0",
    "grpc-tools": "^1.12.0",
    "nodemon": "^3.0.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.0.0",
    "vitest": "^1.0.0"
  }
}
